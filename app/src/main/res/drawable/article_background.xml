<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item
        android:left="6dp"
        android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:left="3dp"
        android:right="3dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="6dp"
        android:right="6dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- Shadow -->
    <item
        android:height="3dp"
        android:bottom="3dp"
        android:gravity="bottom"
        android:left="6dp"
        android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_dimmed" />
        </shape>
    </item>
    <item
        android:width="3dp"
        android:bottom="6dp"
        android:gravity="right"
        android:right="3dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_dimmed" />
        </shape>
    </item>
    <item
        android:width="3dp"
        android:height="3dp"
        android:bottom="6dp"
        android:gravity="right|bottom"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_dimmed" />
        </shape>
    </item>
