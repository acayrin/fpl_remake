<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="left|right" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
        </shape>
    </item>
    <item android:gravity="top|bottom" android:left="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
        </shape>
    </item>
    <item android:gravity="bottom" android:height="5dp" android:left="5dp" android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_light" />
        </shape>
    </item>
    <item android:gravity="right" android:width="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_light" />
        </shape>
    </item>
    <item android:gravity="bottom|right" android:width="5dp" android:height="5dp" android:left="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_light" />
        </shape>
    </item>
</layer-list>