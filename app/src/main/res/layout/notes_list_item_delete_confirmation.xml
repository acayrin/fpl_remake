<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/article_background"
    android:orientation="vertical"
    android:padding="@dimen/_padding">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_margin_bottom"
        android:text="@string/notes_list_delete_label"
        android:textColor="@color/primary_dimmed"
        android:textSize="@dimen/_text_size_large"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/note_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notes_list_delete_content"
        android:textColor="@color/background"
        android:textSize="@dimen/_text_size_normal" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_margin_top"
        android:gravity="end">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/note_dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_light"
            android:padding="@dimen/_padding"
            android:text="@string/notes_list_delete_btn_cancel"
            android:textColor="@color/background"
            android:textSize="@dimen/_text_size_small" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/note_dialog_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_margin"
            android:background="@drawable/badge_light"
            android:padding="@dimen/_padding"
            android:text="@string/notes_list_delete_btn_confirm"
            android:textColor="@color/background"
            android:textSize="@dimen/_text_size_small" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>