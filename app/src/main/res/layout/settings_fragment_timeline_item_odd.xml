<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToOutline="false"
    android:clipToPadding="false"
    android:orientation="vertical">


    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:endLineColor="@color/primary_dimmed"
        app:lineOrientation="horizontal"
        app:linePadding="8dp"
        app:lineWidth="2dp"
        app:marker="@color/primary"
        app:markerSize="12dp"
        app:startLineColor="@color/primary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_settings_timeline_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:background="@drawable/badge_timeline_date_reversed"
        android:clipChildren="false"
        android:clipToOutline="false"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:rotation="45"
        android:text="{text}"
        android:textColor="@color/background"
        android:textSize="16sp" />
</androidx.appcompat.widget.LinearLayoutCompat>